<Window x:Class="AcademyGroupMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyGroupMVVM"
        mc:Ignorable="d"
        Title="Управление персоналом IT-компании" MinWidth="800" MinHeight="600" Background="#1E1E1E" Foreground="White">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#2C2C2C" CornerRadius="15" Padding="20" Margin="10" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Название группы:" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,5,0,15" BorderBrush="#BB86FC" BorderThickness="2" Background="#2D2D2D" Foreground="White"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Добавить" Command="{Binding AddGroupCommand}" Background="#03DAC5" Foreground="Black" Padding="10,5"/>
                    <Button Content="Удалить" Command="{Binding RemoveGroupCommand}" Margin="5,0" Background="#CF6679" Foreground="White" Padding="10,5"/>
                    <Button Content="Изменить" Command="{Binding UpdateGroupCommand}" Background="#F4B400" Foreground="Black" Padding="10,5"/>
                </StackPanel>
                <Button Content="Список групп" Command="{Binding RefreshGroupCommand}" Background="#BB86FC" Foreground="White" Padding="10,5" Margin="5,10"/>

                <ComboBox ItemsSource="{Binding GroupsList}" IsSynchronizedWithCurrentItem="True" SelectedIndex="{Binding Index_selected_groups}" Background="#2D2D2D" Foreground="White">
                    
                    <ComboBox.ItemTemplate>
                    <DataTemplate>
                            <Border BorderBrush="#BB86FC" BorderThickness="1" Padding="5" CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Группа: " FontWeight="Bold" Foreground="#BB86FC"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="#03DAC5"/>
                                </StackPanel>
                            </Border>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        </Border>
        <Border Background="#2C2C2C" CornerRadius="15" Padding="20" Margin="10" Grid.Column="1">
          <StackPanel>
                <StackPanel>
                    <TextBlock Text="Имя:" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,5,0,10" BorderBrush="#BB86FC" BorderThickness="2" Background="#2D2D2D" Foreground="White"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Фамилия:" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,5,0,10" BorderBrush="#BB86FC" BorderThickness="2" Background="#2D2D2D" Foreground="White"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Возраст:" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                    <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,5,0,10" BorderBrush="#BB86FC" BorderThickness="2" Background="#2D2D2D" Foreground="White"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Средний балл:" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                    <TextBox Text="{Binding GPA, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,5,0,10" BorderBrush="#BB86FC" BorderThickness="2" Background="#2D2D2D" Foreground="White"/>
                </StackPanel>
         </StackPanel>
        </Border>
        <Border Background="#2C2C2C" CornerRadius="15" Padding="20" Margin="10" Grid.Column="2">
        <StackPanel >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Content="Добавить" Command="{Binding AddStudentCommand}" Background="#03DAC5" Foreground="Black" Padding="10,5" />
                    <Button Content="Удалить"  Command="{Binding RemoveStudentCommand}"  Background="#CF6679" Margin="5,0"  Foreground="White" Padding="10,5"/>
                    <Button Content="Изменить" Command="{Binding UpdateStudentCommand}" Background="#F4B400" Foreground="Black" Padding="10,5"/>
            </StackPanel>
                <Button Content="Список студентов" Command="{Binding RefreshStudentCommand}" Background="#BB86FC" Foreground="White" Padding="10,5" Margin="5,10" />
                <ComboBox ItemsSource="{Binding StudentsList}" IsSynchronizedWithCurrentItem="True" SelectedIndex="{Binding  Index_selected_students}"  Background="#2D2D2D" Foreground="White">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                            <Border BorderBrush="#BB86FC" BorderThickness="1" Padding="10" CornerRadius="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="{Binding FirstName}" FontSize="16" FontWeight="Bold" Foreground="#03DAC5"/>
                                    <TextBlock Text="{Binding LastName}" FontSize="16" FontWeight="Bold" Foreground="#BB86FC"/>
                                <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Возраст:" FontSize="14" Foreground="Black" />
                                        <TextBlock Text="{Binding Age}" FontSize="14" Foreground="Black"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Средний балл:" FontSize="14" Foreground="Black" />
                                        <TextBlock Text="{Binding GPA}" FontSize="14" Foreground="Black"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Группа:" FontSize="14" Foreground="Black"/>
                                        <TextBlock Text="{Binding GroupName}" FontSize="14" Foreground="Black"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
       </Border>
    </Grid>
</Window>
